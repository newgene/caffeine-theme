<aside class="cover animated" style="background-image: url({{@blog.cover}})">
    <div class="background-container">
        <div class="profile">
            <header id="aside-header" class="nav-header mobile">
                <a id="aside-close-button" class="open-link right">
                    <i class="fa fa-close"></i>
                </a>
            </header>
            {{#if @blog.logo}}
            <div class="profile-logo">
                <a id="avatar-link" class="open-link" title="What's new with {{@blog.title}}" href="{{@blog.url}}/#open">
                    <img src="{{@blog.logo}}" alt="{{@blog.title}} avatar" class="avatar rounded hvr-buzz-out" />
                </a>
            </div>
            {{/if}}
            <div class="profile-header">
                <a class="open-link" title="Link to homepage for {{@blog.title}}" href="{{@blog.url}}/#open">
                    <h1 class="profile-title">{{@blog.title}}</h1>
                </a>
            </div>
            <div class="profile-body">
                <a class="open-link" title="Link to homepage for {{@blog.title}}" href="{{@blog.url}}/#open">
                    <h3 id="profile-resume"></h3>
                </a>
                <hr class="divider long" />
                <h2>{{@blog.description}}</h2>
                <hr class="divider short" />

                        <li class="card1">
                            <div class="card-container">
                                <div class="card-body">
                                    <a href="http://biothingsapi.readthedocs.io/" title="link to SDK">
                                        <div class="card-content">
                                            <h2>SDK</h2>
                                            <p class="description">To help you build your own BioThings API</p>
                                        </div>
                                    </a>
                                </div>
                            </div>
                        </li>

                        <li class="card1">
                            <div class="card-container">
                                <div class="card-body">
                                    <a href="/specs/" title="link to specs">
                                        <div class="card-content">
                                            <h2>Specs</h2>
                                            <p class="description">Guidelines to follow when building a BioThings API</p>
                                        </div>
                                    </a>
                                </div>
                            </div>
                        </li>            
                </div>
            <div class="handwritten">
                <img src="\assets\img\buildapis.png"></img>
            </div>
                            <li class="mycardbtns">
                                <a href="http://mygene.info" target="_blank" title="MyGene.info">
                                    <img class="default" src="/assets/img/icons/mygene.png"> </img>
                                    <img class="hover" src="/assets/img/icons/mygene_on.png"> </img>
                                </a>
                            </li>
                            <li class="mycardbtns">
                                <a href="http://myvariant.info" target="_blank" title="MyVariant.info">
                                    <img class="default" src="/assets/img/icons/myvariant.png"></img>
                                    <img class="hover" src="/assets/img/icons/myvariant_on.png"></img>
                                </a>
                            </li>
                            <li class="mycardbtns">
                                <a href="http://mychem.info" target="_blank" title="MyChem.info">
                                    <img class="default" src="/assets/img/icons/mychem.png"> </img>
                                    <img class="hover" src="/assets/img/icons/mychem_on.png"> </img>
                                </a>
                            </li>
            <p></p>
            <div class="handwritten">
                <a href="/showcase/" title="showcase">
                <img class="default" src="/assets/img/and more.png"> </img>
                <img class="hover" src="/assets/img/and more_on.png"> </img>
                </a>
            </div>
            <hr class="divider long" />
            <div class="newsbox">
                    <img class="subimgbox" src="/assets/img/latest-news.png"> </img>
                    <div class="subnewsbox">
                    {{#foreach posts}}
                        {{#if @first}}
                        <a href="{{url}}"><time class="post-date" datetime="{{date format='YYYY-MM-DD'}}">{{date format="DD MMMM YYYY"}}</time>: {{{title}}}: {{excerpt words="15"}} <a class="read-more" href="{{url}}">&raquo;</a>
                        </a></a>
                        {{/if}}
                    {{/foreach}}
                    </div>
            </div>

            <p></p>
            <div class="socmenu">    
                {{> social}}
            </div>

        </div>
    </div>
</aside>

<div class="blog-header">
    <a title="Link to homepage for {{@blog.title}}" href="{{@blog.url}}/#open">
        <h1 class="profile-title hvr-float">{{@blog.title}}</h1>
    </a>
    {{navigation}}
</div>
